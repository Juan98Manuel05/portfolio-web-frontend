---
interface Props{
    text: string
}
const { text } = Astro.props
---

<button class="font-bold">
    {text}
</button>
<style>
    button{
        background: rgb(34, 32, 32);
        color: white;
        border: 3px solid transparent;
        border-image: linear-gradient(45deg, var(--color-yellow),#ff8244) 10;
        transition: 250ms;
    }
    button:hover{
        box-shadow: 0px 0px 30px -12px var(--color-yellow);
        transform: scale(1.05) rotate(-1deg);
    }
</style>
