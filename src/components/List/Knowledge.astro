import  type { List } from '../../types/Knowledge';

const fetchData = async (): Promise<List[]> => {
  try {
    const response = await fetch('https://bk-portfolio-eight.vercel.app/api/knowledges');
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    const data = await response.json();
    return data;
    
  } catch (error) {
    console.error('Error fetching data:', error);
    return [];
  }
};

// Llama a la funci√≥n para obtener datos
const data = await fetchData();
