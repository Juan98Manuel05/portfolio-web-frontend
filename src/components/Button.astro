---
interface Props{
    text: string
}
const { text } = Astro.props
---

<button>
    {text}
</button>
<style>
    button{
        background-color: #ffd444;
        transition: 300ms;
    }
    button:hover{
        background-color: #ffdb65;
        color: black;
        box-shadow: 0px 0px 25px -10px #ffd444;
    }
</style>
