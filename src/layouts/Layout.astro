---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		--color-yellow: #ffd344;
		--color-yellow-accent: #f0c762
	}

	@font-face {
		font-family: 'Ubuntu';
		src: url('/fonts/Ubuntu-Regular.ttf') format('tff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'Arvo';
		src: url('/fonts/Arvo-Regular.ttf') format('tff');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	html {
		font-family: 'Ubuntu';
	}
	body{
		margin: auto;
		background: 
			radial-gradient(circle at -10% -30%, rgba(255, 221, 68, 0.781) 0%, rgba(255,211,68,0) 30%, transparent 100%),
			radial-gradient(circle at 110% 110%, rgba(255, 221, 68, 0.616) 0%, rgba(255,211,68,0) 20%,  transparent 50%, transparent 100%);
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	h1, h2, h3, h4, h5{
		margin: 0;
	}

	h1{
		font-family: 'Ubuntu', system-ui, sans-serif;
	}
	
	button{
		border: 0;
		padding: 15px 50px;
		font-size: 18px;
		cursor: pointer;
		margin-top: 1rem;
	}
	img{
		width: 100%;
	}

	.align-center{
		align-content: center;
	}

	
</style>
